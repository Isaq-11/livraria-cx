<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="livrariaPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.livraria.model.Autor</class>
        <class>com.livraria.model.AutorLivro</class>
        <class>com.livraria.model.Cliente</class>
        <class>com.livraria.model.Editora</class>
        <class>com.livraria.model.Fornecedor</class>
        <class>com.livraria.model.Funcionario</class>
        <class>com.livraria.model.Livro</class>
        <class>com.livraria.model.PedidoLivro</class>
        <class>com.livraria.model.PessoaFisica</class>
        <class>com.livraria.model.PessoaJuridica</class>
        <class>com.livraria.model.Venda</class>
        <class>com.livraria.model.VendaItem</class>


        <properties>
            <!-- Configuração do banco -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/livraria-cx"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Dialeto do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Atualiza/cria tabelas automaticamente -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Mostra SQL no console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- (Opcional) Validação automática das entidades -->
            <!--<property name="jakarta.persistence.validation.mode" value="AUTO"/> -->

            <!-- (Opcional) Força commit explícito para evitar warnings -->
            <!--<property name="hibernate.connection.autocommit" value="false"/> -->
        </properties>
    </persistence-unit>
</persistence>